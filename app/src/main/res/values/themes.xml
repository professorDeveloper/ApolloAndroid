    <style name="FontRegularClickable">
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.GraphQLAnilist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ButtonPrimaryBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.GraphQLAnilist.Detail">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@color/status</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:ambientShadowAlpha">0.08</item>
        <item name="android:spotShadowAlpha">0.08</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="closeIconTint">@color/white</item>
    </style>
</resources>